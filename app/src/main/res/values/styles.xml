<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NormalInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="android:hint">@string/email</item>-->
        <item name="counterEnabled">true</item>
        <item name="hintTextColor">@color/colorStrongCyan</item>
        <item name="boxStrokeColor">@color/colorStrongCyan</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/colorStrongCyan</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="errorEnabled">true</item>

    </style>

    <style name="FontColor">
        <item name="android:textColor">@color/colorVeryLightGray</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:maxLength">@integer/maxLength</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PasswordInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="hintTextColor">@color/colorStrongCyan</item>
        <item name="boxStrokeColor">@color/colorStrongCyan</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="android:textColorHint">@color/colorStrongCyan</item>
        <item name="android:hint">"Password"</item>
        <item name="endIconMode">password_toggle</item>
        <item name="errorEnabled">true</item>
    </style>


    <style name="PasswordInputFont">
        <item name="android:textColor">@color/colorVeryLightGray</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:maxLength">@integer/maxLength</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:layout_weight">@dimen/width_248dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/colorStrongCyan</item>
        <item name="cornerRadius">@dimen/corner_radius_26dp</item>
    </style>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/corner_radius_26dp</item>
    </style>
</resources>